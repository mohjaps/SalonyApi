@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "تعديل كلمة السر";
    Layout = "_Layout2";
}



<h2>@ViewData["Title"]</h2>

<form id="change-password-form" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.OldPassword">كلمة المرور القديمة</label>
        <input asp-for="Input.OldPassword" class="form-control" />
        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.NewPassword">كلمة المرور الجديدة</label>
        <input asp-for="Input.NewPassword" class="form-control" />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword">تاكيد كلمة المرور الجديدة</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn-new-style">تغيير كلمة المرور</button>
</form>
<div class="form-group">
     
        <a asp-action="Index" asp-controller="Home" class="btn-black">العودة الى الرئيسية</a>

    
    </div>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
