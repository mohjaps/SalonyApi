@model Salony.Models.ControllerDTO.CoponsDTO

@{
    ViewData["Title"] = "Edit";
}

<div class="col-sm-12">

    <div class="card-box" style="padding: 80px 20px 40px;">
        <div class="row">

            <h2 class="header-title m-t-0 m-b-30" style="text-align:center">تعديل </h2>
            <form enctype="multipart/form-data" asp-action="Edit" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                <div class="form-group">
                    <label asp-for="code" class="control-label">كود الخصم</label>
                    <input asp-for="code" class="form-control" />
                    <span asp-validation-for="code" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="discPercentage" class="control-label">نسبة الخصم </label>
                    <input asp-for="discPercentage" class="form-control" />
                    <span asp-validation-for="discPercentage" class="text-danger"></span>
                </div>





                <div class="col-md-12">
                    <div class="form-group">

                        <input type="submit" value="حفظ" onclick="Validtion()" class="btn-new-style" />

                    </div>
                </div>

            </form>
        </div>
    </div>


</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

