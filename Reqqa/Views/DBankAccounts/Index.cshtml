@model IEnumerable<Core.TableDb.BankAccounts>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h4 class="header-title m-t-0 m-b-30"></h4>
            <div class="row">

                <!-- -------------------------------------------------------------------------------------------------- -->

                <p>
                    @Html.ActionLink("اضافة جديدة", "Create", "DBankAccounts", null, new { @class = "btn btn-primary btn-rounded w-md waves-effect waves-light m-b-5" })
                </p>
                <h2 style="text-align:center">الحسابات البنكية</h2>

                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead style="text-align:center">
                        <tr>
                            <th style="text-align:center">
                                #
                            </th>
                            <th style="text-align:center">
                                اسم البنك بالعربية
                            </th>
                            <th style="text-align:center">
                                اسم البنك بالانجليزية
                            </th>
                            <th style="text-align:center">
                                رقم الحساب البنكى
                            </th>
                            <th style="text-align:center">
                                الحالة
                            </th>
                            <th style="text-align:center">
                                تغيير الحالة
                            </th>
                            <th style="text-align:center">
                                صاحب الحساب
                            </th>
                            <th style="text-align:center">
                                تعديل
                            </th>
                        </tr>
                    </thead>
                    <tbody style="text-align:center">
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.ID
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bankNameAr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bankNameEn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bankAccountNumber)
                            </td>
                            <td>
                                @{
                                    if (item.isActive == true)
                                    {
                                        <label id="@item.ID" style="color:green;font-size: 17px;">مفعل</label>
                                    }
                                    else
                                    {
                                        <label id="@item.ID" style="color:red;font-size: 17px;">غير مفعل</label>
                                    }
                                }
                            </td>
                            <td>
                                <input type="button" value="تغيير الحالة" onclick="ChangeStatus('@item.ID')" class="btn btn-purple btn-rounded" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OwnerNameAr)
                            </td>
                            <td>
                                <a class="icon-font btn" asp-action="Edit" asp-route-id="@item.ID">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>

                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div><!-- end row -->
        </div>
    </div><!-- end col -->
</div>



@section scripts{

    <script>

        function ChangeStatus(id) {
            $.post('/DBankAccounts/ChangeStatus', { id: id }, function (response) {
                if (response == true) {
                    $('#' + id).css('color', 'green');
                    $('#' + id).html('مفعل');
                } else if (response == false) {
                    $('#' + id).css('color', 'red');
                    $('#' + id).html('غير مفعل');
                }
            });
        }


    </script>

}
