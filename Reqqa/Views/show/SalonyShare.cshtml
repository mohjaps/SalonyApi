@model Salony.Controllers.showController.ViewBoutique
@{
    ViewData["Title"] = "share";
    Layout = null;
}


<!DOCTYPE html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title></title>
    <!-- Bootstrap CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/all.css" rel="stylesheet" />
    <link href="~/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/css/owl.theme.default.min.css" rel="stylesheet" />

    <!--<link href="css/style.css" rel="stylesheet" type="text/css">-->
    @*<link rel="shortcut icon" href="~/imges/Designbolts.jpg" />*@
    <!--
       <link href="css/" rel="stylesheet" type="text/css">
     -->
    <!--[if it IE 9]>
            <script src="js/html5shiv.min.js" type="text/javascript"></script>
    <![end if]-->

    <style>
        * {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }

        a {
            text-decoration: none;
            transition: all .4s ease-in-out;
            color: inherit;
        }

            a:hover {
                color: #FFFFFF
            }

        a,
        button,
        input[type="button"] {
            cursor: pointer;
            transition: all .5s ease-in-out;
            color: inherit;
        }

            a:focus,
            a:hover {
                text-decoration: none;
            }

        button {
            background: transparent;
            border: none;
        }

            button:focus {
                outline: none
            }

        .list-inline-item:not(:last-child),
        ul {
            margin-right: 0;
        }

        ul {
            padding-left: 0;
            padding-right: 0;
            transition: all .4s ease-in-out;
            margin: 0px
        }

            ul li {
                list-style-type: none
            }




        .owl-carousel {
            direction: ltr
        }



        @@font-face {
            font-family: "myFont";
            src: url(../../wwwroot/webfonts/JF-Flat-regular.ttf)
        }

        body {
            direction: rtl;
            text-align: right;
            word-spacing: 2px;
            background: #F3F3F3;
            color: #2D2D2D;
            font-size: 15px;
            font-family: myFont;
        }




        .outer_info_tab {
            padding: 30px 5%;
        }

            .outer_info_tab h3 {
                padding: 15px 10px;
                text-align: center;
                color: #a3195b;
            }


        .owl_reaa.owl-theme .owl-dots,
        .owl_reaa.owl-theme .owl-nav {
            display: none
        }


        .owl_reaa {
            border-radius: 20px;
            overflow: hidden;
            margin: 20px 0px 40px;
        }

            .owl_reaa .item {
                width: 100%;
                height: 450px;
            }

                .owl_reaa .item img {
                    width: 100%;
                    height: 100%;
                    max-width: 100%;
                }

        .tab_reaa.nav-pills .nav-link {
            background-color: #AD9492;
            color: #FFFFFF;
            margin-left: 20px;
            width: 150px;
            text-align: center;
            font-weight: bolder;
            border-radius: 20px;
            margin-top: 10px;
        }

            .tab_reaa.nav-pills .nav-link.active {
                background-color: #a3195b;
            }


        .information_reaa .title {
            color: #a3195b;
            margin: 10px 0px;
            font-weight: bold;
        }


        .img_offer {
            padding: 15px 20px;
        }


            .img_offer .the_img {
                width: 100%;
                height: 250px;
                border-radius: 20px;
                overflow: hidden;
                position: relative;
                margin: 15px 0;
            }

                .img_offer .the_img > img {
                    width: 100%;
                    height: 100%;
                    max-width: 100%;
                }


        .starts li {
            margin-right: 3px;
            font-size: 20px;
            color: gray
        }

            .starts li.active {
                color: gold
            }



        .information_reaa p {
            font-weight: bold;
            padding-right: 25px;
        }

        .information_reaa > p {
            padding-right: 0px
        }





        .outer_servize {
            margin-top: 40px;
        }


        .one_servize {
            margin: 20px 0
        }

        .inear_servize {
            background-color: #a3195b;
            color: #FFF;
            display: flex;
            justify-content: space-between;
            padding: 15px 20px;
            border-radius: 50px;
            font-weight: bold;
            cursor: pointer;
        }


            .inear_servize.active span:last-child {
                transform: rotate(90deg);
            }


        .all_info_servize {
            padding: 10px 40px;
        }

        .outer_servize .one_servize:not(:first-child) .all_info_servize {
            display: none
        }



        .the_one_info {
            display: flex;
            background-color: #E6E1E0;
            padding: 5px 20px;
            border-radius: 50px;
            align-items: center;
            border: 1px solid #979796;
            margin: 8px 0
        }

            .the_one_info > div {
                flex-grow: 1;
            }

                .the_one_info > div:not(:last-of-type) {
                    border-left: 1px solid #C2B1AF
                }

            .the_one_info > div {
                width: 100%;
                display: block;
                height: 100%;
                padding: 6px;
                font-weight: bold;
                color: #A38785;
                text-align: center;
            }

            .the_one_info > aside {
                color: #a3195b;
                font-size: 18px;
                flex-basis: 50px;
                flex-shrink: 0;
            }

                .the_one_info > aside > span {
                    cursor: pointer
                }


        @@media (max-width: 767.98px) {

            .owl_reaa .item {
                height: 250px;
            }
        }


        @@media (max-width: 575.98px) {

            .all_info_servize {
                padding: 10px 10px;
            }
        }
    </style>

</head>

<body>


    <div class="outer_info_tab">

        <h3>@Model.name</h3>


        <div class="owl-carousel owl-theme owl_reaa">
            @foreach (var item in Model.imgs)
            { 
                <div class="item">
                    <img src="@item">
                </div>
            }
        </div>



        <ul class="nav nav-pills mb-3 tab_reaa" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">المعلومات</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">الخدمات</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">العروض</a>
            </li>
        </ul>

        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

                <div class="information_reaa">

                    <div class="d-flex justify-content-between flex-wrap">

                        <h5 class="title">@Model.name</h5>

                        <ul class="d-flex starts">
                            @for (int i = 1; i <= 5; i++)
                            {
                                @if (Model.rate >= i)
                                {
                                    <li class="active"><i class="fa fa-star" aria-hidden="true"></i></li>
                                }
                                else
                                {
                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                }
                            }
                        </ul>

                    </div>

                    <p><i class="fa fa-map-marker" aria-hidden="true"></i> <span>@Model.address </span></p>

                    <div>
                        <h6 class="title">الوصف</h6>
                        <p>@Model.description</p>
                    </div>

                    <div>
                        <h6 class="title">مواعيد العمل</h6>
                        <p>من @Model.time_from الي @Model.time_to</p>
                    </div>


                    @*<input name="lat" type="hidden" id="lat" value="@Model.lat " />
                        <input name="lng" type="hidden" id="lng" value="@Model.lng" />*@
                    <div id="map" style="width:100%; height: 300px;margin-top: 20px"></div>


                </div>


            </div>

            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">

                <div class="outer_servize">

                    @foreach (var item in Model.main_services.Select((value, i) => new { i, value }))
                    {
                        <div class="one_servize">

                            <div class="inear_servize">
                                <span>@item.value.name</span>
                                <span><i class="fas fa-caret-down"></i></span>
                            </div>

                            <div class="all_info_servize">
                                @foreach (var item2 in item.value.sub_services)
                                {
                                    <div class="the_one_info">
                                        <div>@item2.name</div>
                                        <div>@item2.duration د</div>
                                        <div>@item2.price ر.س</div>
                                    </div>
                                }
                            </div>


                        </div>
                    }


                </div>


            </div>


            <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">

                <div class="offer-reaa">

                    <div class="img_offer">

                        @foreach (var item in Model.offers)
                        {
                            <div class="the_img">
                                <img src="@item">
                            </div>
                        }

                    </div>


                </div>


            </div>

        </div>

    </div>



    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <!--
        <script src="js/jquery_js.js" type="text/javascript"></script>
    -->
    <script>
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 0,
            nav: true,
            autoplay: true,
            autoplayTimeout: 1500,

            responsive: {
                0: {
                    items: 1
                }
            }
        })
    </script>


    <script>

        $(".inear_servize").on("click", function () {

            $(this).next().slideToggle(500);

            $(".all_info_servize").not($(this).next()).slideUp(500);

            $(this).toggleClass("active");

            $(".inear_servize").not($(this)).addClass("active");

        });

        $(".remove_parents").on("click", function () {

            $(this).parents(".the_one_info").fadeOut(100).remove();

        });

    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB_oSewQNaoaW8F2_WxAC5eFwoeaZYpOHE&callback=initMap&language=ar">
    </script>

    <script src="~/js/locationpicker.jquery.js"></script>

    <script>
        $(document).ready(function () {
            $('#map').locationpicker({
                location: {
                    latitude: "@Model.lat",
                    longitude: "@Model.lng"
                },
                radius: 50,
                zoom: 10,
                scrollwheel: false,
                zoomControl: true,
                //draggable: false,
                markerDraggable: false //default - true
            });
        });

    </script>

</body>

</html>