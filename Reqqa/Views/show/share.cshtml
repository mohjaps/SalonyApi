    </script>

    <script src="js/locationpicker.jquery.js"></script>

    <script>
        $(document).ready(function () {

            setTimeout(function () {
                navigator.geolocation.getCurrentPosition(function (position) {
                    if ($("#lat").val() != "" && $("#lng").val() != "") {
                        $('#map').locationpicker({
                            location: {
                                latitude: $("#pre_lat").val(),
                                longitude: $("#pre_lng").val()
                            },
                            radius: 50,
                            zoom: 10,
                            scrollwheel: false,
                            zoomControl: true,
                            inputBinding: {

                                latitudeInput: $("#lat"),
                                longitudeInput: $("#lng"),
                                locationNameInput: $('#address')
                            }
                        });
                    } else {

                        $('#map').locationpicker({
                            location: {
                                latitude: position.coords.latitude,
                                longitude: position.coords.longitude
                            },
                            radius: 50,
                            zoom: 15,
                            scrollwheel: false,
                            zoomControl: true,
                            inputBinding: {
                                latitudeInput: $("#lat"),
                                longitudeInput: $("#lng"),
                                locationNameInput: $('#address')
                            }
                        });

                    }

                });
            }, 3000);

        });




        async function AddOffer() {

            var Obj = {
                lang: "ar"
            }

            var fd = new FormData();

            $.each(Obj, function (key, val) {
                fd.append(key, val);
            });

            fd.append('img', $('#img').get(0).files[0]);

            await $.ajax({
                type: "POST",
                url: Host + "api/v1/AddProviderOffer",
                contentType: false,
                processData: false,
                data: fd,
                headers: {
                    Authorization: Token
                },
                dataType: 'json',
                success: function (data) {
                    if (data.key == 1) {
                        toastr.success(data.msg);
                        setTimeout(function () {
                            location.reload();
                        }, 500);
                    } else {
                        toastr.error(data.msg);
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
                }
            });

        }


    </script>

