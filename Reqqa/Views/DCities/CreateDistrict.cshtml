@model Salony.Models.ControllerDTO.DistrictsDTO
@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">

        <div class="card-box" style="padding: 80px 20px 40px;">
            <div class="row">

                <h2 class="header-title m-t-0 m-b-30" style="text-align:center"> اضافة حي جديد</h2>

                <form enctype="multipart/form-data" asp-action="CreateDistrict" asp-controller="DCities" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-horizontal">
                        <hr />
                        <input type="hidden" asp-for="FK_CityID" value="@ViewData["id"]" />

                        <div class="form-group">
                            <label asp-for="nameAr" class="control-label col-md-2">اسم الحى بالعربية </label>
                            <div class="col-md-10">
                                <input asp-for="nameAr" class="form-control" />
                                <span asp-validation-for="nameAr" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="nameEn" class="control-label col-md-2">اسم الحى بالانجليزية </label>
                            <div class="col-md-10">
                                <input asp-for="nameEn" class="form-control" />
                                <span asp-validation-for="nameEn" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="submit" value="اضافة" class="btn-new-style btn-rounded" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div>
                                @Html.ActionLink("العودة الى الرئيسية", "Cities", new { id = ViewData["id"] }, new { @class = "btn-black" })
                            </div>
                        </div>
                    </div>

                </form>


            </div>
        </div>
    </div>
</div>

