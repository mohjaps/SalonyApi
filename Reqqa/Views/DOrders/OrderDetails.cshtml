@model Core.TableDb.Orders

@{
    ViewData["Title"] = "SlonyNewOrders";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h4 class="header-title m-t-0 m-b-30"></h4>
            <div class="row">

                <h2 style="text-align:center">طلب رقم @Model.ID</h2>

                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead style="text-align:center">
                        <tr>
                            <th style="text-align:center">
                                الخدمة الرئيسية
                            </th>
                            <th style="text-align:center">
                                الخدمة الفرعية
                            </th>
                            <th style="text-align:center">
                                الوقت
                            </th>
                            <th style="text-align:center">
                                التاريخ والوقت
                            </th>
                            <th style="text-align:center">
                                السعر
                            </th>

                            <th style="text-align:center">
                                العنوان
                            </th>
                        </tr>
                    </thead>
                    <tbody style="text-align:center">
                        @foreach (var item in Model.OrderServices)
                        {
                        <tr>
                            <td>
                                @item.mainServiceNameAr
                            </td>
                            <td>
                                @item.SubServicNameAr
                            </td>
                            <td>
                                @item.duration
                            </td>
                            <td>
                                @{string date = item.date.ToString("dd/MM/yyyy hh:mm :tt");}
                                @date
                            </td>
                            <td>
                                @item.price
                            </td>
                            <td>
                                @{string address = String.IsNullOrEmpty(item.address) ? "بالصالون" : item.address;}
                                @address
                            </td>
                        </tr>
                          }
                    </tbody>

                </table>
            </div><!-- end row -->
        </div>
    </div><!-- end col -->
</div>



@section scripts{
    <script src="~/assets/js/jquery.fancybox.min.js"></script>
}
