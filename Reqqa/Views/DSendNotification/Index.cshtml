@model IEnumerable<Core.TableDb.HistoryNotify>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h4 class="header-title m-t-0 m-b-30"></h4>
            <div class="row">
                <h2 style="text-align:center">الاشعارات</h2>
                <!-- -------------------------------------------------------------------------------------------------- -->
                <p>
                    @Html.ActionLink("ارسال اشعار جديد", "SendNotify", "DSendNotification", null, new { @class = "btn btn-primary btn-rounded w-md waves-effect waves-light m-b-5" })
                </p>

                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>

                            <th style="text-align:center">
                                الاشعارات
                            </th>

                            <th style="text-align:center">
                                التاريخ
                            </th>

                        </tr>
                    </thead>
                    <tbody style="text-align:center">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Text)
                                </td>
                                <td>
                                    @item.Date.ToString("dd MMM yyyy")
                                </td>


                            </tr>
                        }
                    </tbody>

                </table>
            </div><!-- end row -->
        </div>
    </div><!-- end col -->
</div>
